{
  "name": "@dinoly/trail",
  "version": "0.4.0",
  "description": "Generate a trail behind an element.",
  "main": "trail.min.js",
  "scripts": {
    "test": "mocha",
    "ts:ci": "npm run ts:lint && tsc",
    "ts:compile": "npm run ts:lint && tsc && npm run ts:minify",
    "ts:watch": "tsc -w",
    "ts:lint": "tsc && eslint src/**/*.ts",
    "ts:minify": "minify --type=js dist/trail.js > dist/trail.min.js",
    "npm:content": "npm pack && tar -xvzf *.tgz && rm -rf package *.tgz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dinoly/trail.git"
  },
  "keywords": [
    "trails",
    "trail effect",
    "cdn",
    "animation",
    "particles"
  ],
  "author": "Ashutosh Vishu Yadav",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dinoly/trail/issues"
  },
  "homepage": "https://github.com/dinoly/trail#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "eslint": "^7.32.0",
    "typescript": "^4.4.3"
  }
}
